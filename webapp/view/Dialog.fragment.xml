<core:FragmentDefinition
   xmlns="sap.m"
   xmlns:l="sap.ui.layout"
   xmlns:core="sap.ui.core"
   	xmlns:html="http://www.w3.org/1999/xhtml">
	<Dialog
	state="Warning"
	title="Confirm">
		<content>
			<Label design="Bold" text="Vuoi confermare l'azione?"
			textAlign="Center"/>
		</content> 
		<beginButton>
			<Button text="Yes" press="actionTask"/>
		</beginButton>
		<endButton>
			<Button text="Cancel" press="closeDialog"/>
		</endButton>
	</Dialog>
</core:FragmentDefinition>